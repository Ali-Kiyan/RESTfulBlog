<% include ./partials/header %>

<div class="ui main text container segment bgGrey">
    <div class="ui huge header"><%= blog.title %></div>
     <div class="ui top attached segment">
        <div class="item">
          <img class="ui centered image" src="<%= blog.image%>" alt="" width="40%">
        </div>
        <div class="content">
          <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
         <p><%- blog.body%></p>
        </div>
       <div class="buttons">
          <a class="ui animated fade button" href="/blogs/<%= blog._id %>/edit">
            <div class="visible content">Update</div>
              <div class="hidden content">
                <i class="save icon"></i>
              </div>
          </a>
          <form action="/blogs/<%= blog._id %>/?_method=DELETE" method="POST">
            <button class="ui animated button">
                <div class="visible content">Delete</div>
                  <div class="hidden content">
                    <i class="arrow right icon small"></i>
                  </div>
            </button>
          </form>
        </div>
      </div>
</div>


<% include ./partials/footer %>
